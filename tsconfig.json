{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "removeComments": true,
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "jsx": "preserve", // 在.tsx文件里支持JSX
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "types": ["vitest/globals"],
        "baseUrl": "./",
        "incremental": true,
        "tsBuildInfoFile": "./build-cache/build-info.json",
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
        // 编译过程中需要引入的库文件的列表。
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "ScriptHost",
            "WebWorker"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.json",
        "src/**/*.cjs",
        "src/**/*.mjs"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "node_modules",
        "dist",
        "build-cache",
        "examples",
        "plugins",
    ],
}
